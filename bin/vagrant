#!/usr/bin/env bash

usage() {
  echo "usage bin/vagrant (up|bootstrap|apply|down)"
}

vagrant_up() {
  vagrant up
}

vagrant_bootstrap() {
  debops bootstrap -i ansible/inventory/hosts_vagrant --sudo -u vagrant --ask-pass && \
  debops common -i ansible/inventory/hosts_vagrant -u devops
}

vagrant_apply() {
  debops -i ansible/inventory/hosts_vagrant
}

vagrant_down() {
  vagrant destroy -f
}

if [[ $1 == 'up' ]]; then
  vagrant_up
  vagrant_bootstrap
  vagrant_apply
  exit
fi

if [[ $1 == 'bootstrap' ]]; then
  vagrant_bootstrap
  exit
fi

if [[ $1 == 'apply' ]]; then
  vagrant_apply
  exit
fi

if [[ $1 == 'down' ]]; then
  vagrant_down
  exit
fi

usage
